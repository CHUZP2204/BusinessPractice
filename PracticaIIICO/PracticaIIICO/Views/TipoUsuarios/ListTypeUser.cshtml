@model PracticaIIICO.ViewModels.ViewTipoUsuarioModel
@{
    ViewBag.Title = "ListTypeUser";
}

@section css{

    <link href="~/Content/Table/TableChz.css" rel="stylesheet" />
}

<div class="Principal">
    <div class="CabeceraTable">
        <h2 style="text-align:center">Tipos De Usuario</h2>
        <br />
    </div>
    <!---->
    <table id="myTable" class="table table-hover table-bordered table-success table-striped">
        <thead>
            <tr>
                <th scope="col"># ID</th>
                <th scope="col">Tipo Usuario</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (PracticaIIICO.BD.sp_Retorna_TipoUsuario_Result PosicionModelo in Model.ListaTipoUsuario)
                {
                    <tr>

                        <td>@PosicionModelo.ID_TipoUsuario</td>
                        <td>@PosicionModelo.Nombre_TipoUsuario</td>
                        <td>
                            <a href="~/TipoUsuarios/ModificaTipoUsuario?id_TipoU=@PosicionModelo.ID_TipoUsuario" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="~/TipoUsuarios/MostrarTipoUsuario?id_TipoU=@PosicionModelo.ID_TipoUsuario" class="btn btn-success"><i class="fas fa-eye"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="PieTable">
        <!--Paginador-->
        @{ Html.RenderPartial("_paginador", Model);}
        <!---->
        <a href="~/TipoUsuarios/NuevoTipoUsuario" class="btn btn-success">Nuevo Dato</a>


        <a class="btn btn-primary" id="refrescar"><i class="fas fa-sync-alt"></i></a>

        <a href="" data-bs-toggle="modal" data-bs-target="#ModalTUSER">Nuevo</a>

    </div>
</div>


<!--Modal De Registro-->
<div class="modal" id="ModalTUSER" data-bs-backdrop="static" tabindex="-1" aria-labelledby="tituloID" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloID">Pantalla De Registro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" class="form-control" id="frmRegistroTUSERM">
                    <div class="row">
                        <div class="form-group">
                            <label>Tipo Usuario:</label>
                            <input type="text" class="form-control" name="pNombreTUsuario" id="pNombreTUsuario" placeholder="Nombre Tipo">
                        </div>
                    </div>
                </form>

                <div class="row g-3 align-items-center">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button id="registrar" type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>
<!--FIN-->


@section scripts{

    <script src="~/Scripts/Recargar.js"></script>
    <!--Modal Registro-->

    <script src="~/Scripts/Usuarios/RegistroTipoUSER.js"></script>

}

<!---->
