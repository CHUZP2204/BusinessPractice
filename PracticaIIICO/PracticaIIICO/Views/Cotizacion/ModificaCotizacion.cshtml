@model PracticaIIICO.BD.sp_Retorna_CotizacionID_Result

@{
    ViewBag.Title = "ModificaCotizacion";
}


<div class="formRegistrochz">
    <h2>Modifica Cotizacion</h2>

    <form id="frmModificaCotizacion" class="form-control" method="post">

        <div class="row">
            <div class="col">
                <label># Orden:</label>
                <input type="text" name="ID_Cotizacion" id="ID_Cotizacion" class="form-control" value="@Model.ID_Cotizacion" readonly />
            </div>

            <div class="col">
                <label>Usuario:</label>
                <select name="ID_Usuario" id="ID_Usuario" class="form-control">
                    @{
                        foreach (PracticaIIICO.BD.sp_Retorna_Usuario_Result ModeloUSER in this.ViewBag.ListaUsuarios)
                        {
                            bool esIdUser = ModeloUSER.ID_Usuario == Model.ID_Usuario;

                            if (esIdUser)
                            {
                                <option value="@ModeloUSER.ID_Usuario" selected>@ModeloUSER.Nombre_U @ModeloUSER.Apellido1_U</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="col">
                <label>Numero Cotizacion:</label>
                <input name="Numero_Cotizacion" id="Numero_Cotizacion" class="form-control" value="@Model.Numero_Cotizacion" readonly />
            </div>
        </div>


        <div class="form-group">
            <label>Nombre Cliente:</label>
            <input type="text" name="Nombre_Cliente" id="Nombre_Cliente" class="form-control" value="@Model.Nombre_Cliente" />
        </div>

        <div class="row">
            <div class="col">
                <label>Telefono:</label>
                <input type="text" name="Telefono_Cliente" id="Telefono_Cliente" class="form-control" value="@Model.Telefono_Cliente" />
            </div>

            <div class="col">
                <label>Correo:</label>
                <input type="email" name="Correo_Cliente" id="Correo_Cliente" class="form-control" value="@Model.Correo_Cliente" />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label>Fecha:</label>
                <input type="text" name="Fecha_Cotizacion" id="Fecha_Cotizacion" class="form-control" value="@Model.Fecha_Cotizacion.ToShortDateString()" readonly />
            </div>
            <div class="col">
                <label>Hora:</label>
                <input type="text" name="Hora_Cotizacion" id="Hora_Cotizacion" class="form-control" Value="@Model.Hora_Cotizacion.ToString()" readonly />
            </div>
            <div class="col">
                <label>Costo Final:</label>
                <input type="number" name="Costo" id="Costo" class="form-control" value="@Model.Costo" readonly />
            </div>
        </div>
        
        <br />
        <div class="form-group">
            <input type="submit" value="Agregar" id="btnAgregar" class="btn btn-success" />
            <a href="~/Cotizacion/ListaCotizacion" class="btn btn-primary">Ver Lista</a>
        </div>
    </form>
    <br />
    
</div>

