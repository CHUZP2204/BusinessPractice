
@{
    ViewBag.Title = "NuevaMarca";
}



<form id="frmRegistroMarcas" method="post">
    <h2>Nueva Marca</h2>

    <div class="form-group">
        <label>Agregue Nombre De La Marca</label>
        <input class="form-control" type="text" name="Nombre_Marca" id="Nombre_Marca" />

        <label>Agregue Una Descripcion:</label>
        <input class="form-control" type="text" name="Descripcion_Marca" id="Descripcion_Marca" placeholder="Ejemplo" />
        <br />
    </div>

    <div class="form-group">
        <input type="submit" value="Agregar" id="btnAgregar" class="btn btn-success" />
    </div>
</form>
<a href="~/Marca/ListaMarcas" class="btn btn-primary">Lista Citas</a>

@{
    if (ViewBag.Error != null)
    {
        string mensaje = ViewBag.Error.ToString();
        @Html.Partial("_ModalMensaje", new ViewDataDictionary
        {
       { "MensajeModal", mensaje }})
    }

}

@section scripts{
    <script src="~/Scripts/Alertas/llamarModal.js"></script>
}