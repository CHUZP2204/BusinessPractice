
@{
    ViewBag.Title = "NuevaCita";
}

<div class="formRegistrochz">

    <h2>Nueva Cita</h2>

    <form id="frmRegistroCitas" class="form-control" method="post">

        <div class="row">
            <div class="col">
                <label>Usuario:</label>
                <select name="ID_Usuario" id="ID_Usuario" class="form-control">
                    @{

                        foreach (PracticaIIICO.BD.sp_Retorna_UsuarioID_Result ModeloUSER in this.ViewBag.ListaUsuariosID)
                        {
                            <option value="@ModeloUSER.ID_Usuario">@ModeloUSER.Nombre_U @ModeloUSER.Apellido1_U </option>
                        }

                    }
                </select>
            </div>

            <div class="col">
                <label>Marca:</label>
                <select name="ID_Marca" id="ID_Marca" class="form-control">
                    @{

                        foreach (PracticaIIICO.BD.sp_Retorna_Marcas_Result ModeloMARK in this.ViewBag.ListaMarcas)
                        {
                            <option value="@ModeloMARK.ID_Marca">@ModeloMARK.Nombre_Marca</option>
                        }

                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label>Nombre Cliente:</label>
            <input type="text" name="Nombre_Cliente" id="Nombre_Cliente" class="form-control" />
        </div>
        <div class="row">
            <div class="col">
                <label>Telefono:</label>
                <input type="text" name="Numero_Cliente" id="Numero_Cliente" class="form-control" />
            </div>

            <div class="col">
                <label>Placa:</label>
                <input type="text" name="Placa_Moto" id="Placa_Moto" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label>Fecha:</label>
                <input type="date" name="Fecha_Cita" id="Fecha_Cita" class="form-control" />
            </div>
            <div class="col">
                <label>Hora:</label>
                <input type="time" name="Hora_Cita" id="Hora_Cita" class="form-control" />
            </div>
        </div>
        

        <br />
        <div class="form-group">
            <input type="submit" value="Agregar" id="btnAgregar" class="btn btn-success" />
            <a href="~/Citas/ListaCitas" class="btn btn-primary">Ver Lista</a>
        </div>
    </form>
    <br />
   
</div>
