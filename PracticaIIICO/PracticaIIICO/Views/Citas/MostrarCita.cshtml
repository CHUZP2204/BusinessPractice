@model PracticaIIICO.BD.sp_Retorna_CitasID_Result
@{
    ViewBag.Title = "MostrarCita";
}

<h2>Mostrar Cita</h2>

<form id="frmMostrarCitas" method="post">
    <div class="form-group">
        <label>Usuario:</label>

        @{
            foreach (PracticaIIICO.BD.sp_Retorna_Usuario_Result ModeloUSER in this.ViewBag.ListaUsuarios)
            {
                bool esIdUSER = ModeloUSER.ID_Usuario == Model.ID_Usuario;

                if (esIdUSER)
                {
                    <input type="text" class="form-control" value="@ModeloUSER.Nombre_U @ModeloUSER.Apellido1_U" readonly/>
                }
            }

        }

    </div>
    <div class="form-group">
        <label>Marca:</label>
        @{
            foreach (PracticaIIICO.BD.sp_Retorna_Marcas_Result ModeloMARK in this.ViewBag.ListaMarcas)
            {
                bool esIdMARK = ModeloMARK.ID_Marca == Model.ID_Marca;

                if (esIdMARK)
                {
                    <input name="ID_Marca" type="text" class="form-control" value="@ModeloMARK.Nombre_Marca" readonly/>
                }
            }
        }
    </div>
    <div class="form-group">
        <label>Nombre Cliente:</label>
        <input type="text" name="Nombre_Cliente" id="Nombre_Cliente" class="form-control" value="@Model.Nombre_Cliente" readonly/>
    </div>
    <div class="form-group">
        <label>Telefono:</label>
        <input type="text" name="Numero_Cliente" id="Numero_Cliente" class="form-control" value="@Model.Numero_Cliente" readonly/>
    </div>

    <div class="form-group">
        <label>Placa:</label>
        <input type="text" name="Placa_Moto" id="Placa_Moto" class="form-control" value="@Model.Placa_Moto" readonly/>
    </div>
    <div class="form-group">
        <label>Fecha:</label>
        <input type="datetime" name="Fecha_Cita" id="Fecha_Cita" class="form-control" value="@Model.Fecha_Cita.Value.ToShortDateString()" readonly />
    </div>
    <div class="form-group">
        <label>Hora:</label>
        <input type="time" name="Hora_Cita" id="Hora_Cita" class="form-control" value="@Model.Hora_Cita"readonly />
    </div>

    <div class="form-group">
        <label>Fecha Ingreso:</label>
        <input type="text" name="Fecha_Ingreso" id="Fecha_Ingreso" class="form-control" value="@Model.Fecha_Ingreso.Value.ToShortDateString()" readonly />
    </div>

    <br />
    
</form>
<br />
<a href="~/Citas/ListaCitas" class="btn btn-primary">Ver Lista</a>
