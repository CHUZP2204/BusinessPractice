
@{
    ViewBag.Title = "NuevoProveedor";
}

<h2>Nuevo Proveedor</h2>

<form id="frmRegistroProveedor" method="post">

    <div class="form-group">
        <label>Nombre Proveedor:</label>
        <input type="text" name="Nombre_PROV" id="Nombre_PROV" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Direccion Proveedor:</label>
        <input type="text" name="Direccion_PROV" id="Direccion_PROV" class="form-control" />
    </div>
    <div class="form-group">
        <label>Correo Proveedor:</label>
        <input type="email" name="Correo_PROV" id="Correo_PROV" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Telefono Proveedor:</label>
        <input type="number" name="Telefono_PROV" id="Telefono_PROV" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Agregar" id="btnAgregar" class="btn btn-success" />
    </div>
</form>
<br />
<a href="~/Proveedores/ListaProveedores" class="btn btn-primary">Lista Proveedores</a>

