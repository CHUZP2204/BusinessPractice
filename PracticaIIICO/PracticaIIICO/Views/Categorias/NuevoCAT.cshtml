
@{
    ViewBag.Title = "NuevoCAT";
}


<div class="formRegistrochz">
    <h2>Nueva Categoria</h2>
    <form id="frmRegistroCAT" class="form-control" method="post">

        <div class="form-group">
            <label>Categoria:</label>
            <input type="text" name="Nombre_Categoria" id="Nombre_Categoria" class="form-control" />
        </div>
        <div class="form-group">
            <label>Descripcion:</label>
            <input type="text" name="Descripcion_Categoria" id="Descripcion_Categoria" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Agregar" id="btnAgregar" class="btn btn-success" />
            <a href="~/Categorias/ListaCategorias" class="btn btn-primary">Ver Lista</a>
        </div>
    </form>

    
</div>